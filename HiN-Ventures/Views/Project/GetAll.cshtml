@model IEnumerable<HiN_Ventures.Models.ProjectViewModels.ProjectListViewModel>

@{
    ViewData["Title"] = "GetAll";
}

<h2>All projects</h2>

<table class="table table-striped table-bordered" id="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Client)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Freelancer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deadline)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.CompanyName)
            </td>
         @if (item.Freelancer != null)
         {
            <td>
                @Html.DisplayFor(modelItem => item.Freelancer.FirstName)
            </td>

         }
         else
         {
            <td>
                <a asp-action="Read" asp-route-id="@item.ProjectId">Available</a>
            </td>
         }

            <td>
                @Html.DisplayFor(modelItem => item.ProjectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complete)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                <a asp-action="Read" asp-route-id="@item.ProjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
